{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nuisance schema",
  "type": "object",
  "definitions": {
    "Variable": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "distribution": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "parameters": {
              "type": "object"
            }
          },
          "required": [
            "type",
            "parameters"
          ],
          "additionalProperties": false,
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "Flat"
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "parameters": {
                    "type": "object",
                    "properties": {
                      "min": {
                        "type": "number"
                      },
                      "max": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "min",
                      "max"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "Log"
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "parameters": {
                    "type": "object",
                    "properties": {
                      "min": {
                        "type": "number"
                      },
                      "max": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "min",
                      "max"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          ]
        }
      },
      "required": [
        "name",
        "description",
        "distribution"
      ],
      "additionalProperties": false
    },
    "LogLikelihoodItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "expression": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "expression"
      ],
      "additionalProperties": false
    },
    "PassConditionItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "expression": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "expression"
      ],
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "$comment": "Profile1D: exactly 1 nuisance variable; supports TargetMode; PassCondition optional.",
      "type": "object",
      "properties": {
        "Method": {
          "const": "Profile1D"
        },
        "Variables": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "$ref": "#/definitions/Variable"
          }
        },
        "LogLikelihood": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/LogLikelihoodItem"
          }
        },
        "TargetMode": {
          "type": "string",
          "enum": [
            "min",
            "max"
          ]
        },
        "PassCondition": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PassConditionItem"
          }
        },
        "MaxAttempt": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "Method",
        "Variables",
        "LogLikelihood",
        "TargetMode",
        "MaxAttempt"
      ],
      "additionalProperties": false
    },
    {
      "$comment": "Generic fallback for other nuisance methods: common minimal structure.",
      "type": "object",
      "properties": {
        "Method": {
          "type": "string"
        },
        "Variables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Variable"
          }
        },
        "LogLikelihood": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/LogLikelihoodItem"
          }
        },
        "PassCondition": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PassConditionItem"
          }
        },
        "MaxAttempt": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "Method",
        "Variables",
        "LogLikelihood",
        "MaxAttempt"
      ],
      "additionalProperties": false
    }
  ]
}