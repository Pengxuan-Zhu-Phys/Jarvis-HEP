{
    "positionals": [
        {
          "name": "file",
          "help": "path of the input file, in yaml format"
        }
      ],
    "options": [
        {
            "short": "-d",
            "long": "--debug",
            "dest": "debug",
            "help": "Run Jarvis-HEP in debug mode, debug mode is testing the program linking",
            "action": "store_true"
        },
        {
            "long": "--plot",
            "action": "store_true",
            "dest": "plot",
            "help": "Using the plotting mode"
        },
        {
            "long": "--skip-library-installation",
            "action": "store_true",
            "dest": "skiplibrary",
            "help": "Skipping the library installation"
        },
        {
            "long": "--skip-draw-flowchart",
            "action": "store_true",
            "dest": "skipFC",
            "help": "Skipping the flowchart drawing"
        },
        {
            "long": "--convert",
            "action": "store_true",
            "dest": "cvtDB",
            "help": "Convert the sample.hdf5 file into csv format"
        },
        {
            "long": "--check-modules",
            "action": "store_true",
            "dest": "check_modules",
            "help": "Test the linking and installation of all dependent high-energy physics packages to ensure they are set up correctly."
        }
    ]
}