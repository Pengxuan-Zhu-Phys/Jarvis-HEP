    echo  1: path to model files
    echo  2: model number
    echo  3: lib name
    echo  4: lib directory
    echo 5-7,[8]: vertex contents 
    exit 1
fi

echo VERTEX: $5 $6 $7 $8

#  sprintf(command,"cd %s; %s/sbin/newVertex %s %s \"%s\" %s \"%s\"", compDir, calchepDir,  libDir, lib, vert_txt);


#define path to CalcHEP
